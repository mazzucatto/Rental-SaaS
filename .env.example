# Database Configuration
POSTGRES_DB=rental_saas
POSTGRES_USER=rental_user
POSTGRES_PASSWORD=rental_password_change_in_production

# Redis Configuration
REDIS_PASSWORD=redis_password_change_in_production

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-minimum-32-characters

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://frontend

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@rentalsaas.com

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216

# Timezone
TZ=America/Sao_Paulo

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api

# Development/Production Profiles
# Use: docker-compose --profile development up
# Or:  docker-compose --profile production up
COMPOSE_PROFILES=development

